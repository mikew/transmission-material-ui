{
  "compilerOptions": {
    // App (build) specific.
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "build/dist",

    // Target (ie browser or node) specific.
    "target": "es2018",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",

    // Should be as strict as possible ...
    "strict": true,
    // But some are just annoying.
    "strictFunctionTypes": false,

    // Some libs need these, but if you're not using decorators, are safe to
    // remove.
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "jsx": "react",
    "sourceMap": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "allowJs": true,

    // Better imports from bad typings / JS projects.
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // For quick builds when watching, overridden in tsconfig.prod, should be
    // enabled in other cases.
    "skipLibCheck": true,
    "noEmit": true,

    // ???
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "prettier.config.js"
  ],
  "include": ["src"]
}
